<h3>add comment </h3>

<%=form_for ([@post,@post.comments.build]) do |f| %>

<div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body ,:cols => 50, :rows => 5%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<%end%>